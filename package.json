{
  "name": "api",
  "version": "1.0.0",
  "description": "The API for the CRSS website.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "tsc && resolve-tspaths",
    "dev": "nodemon -r dotenv/config -r tsconfig-paths/register src/index.ts",
    "lint": "eslint",
    "fix": "eslint --fix",
    "prepare": "husky || true",

    "tool:db:setup": "ts-node -r dotenv/config -r tsconfig-paths/register src/tools/setup_db.ts",
    "tool:db:migrate": "ts-node -r dotenv/config -r tsconfig-paths/register src/tools/migrate_db.ts",
    "tool:uri": "ts-node -r dotenv/config -r tsconfig-paths/register src/tools/auth_url.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.12",
    "dotenv": "^16.5.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "resolve-tspaths": "^0.8.23",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.2",
    "nodejs-snowflake": "^2.0.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.1",
    "sharp": "^0.34.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.2"
  },
  "packageManager": "pnpm@9.15.2",
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
